<!-- BaseViewImpl.ui.xml -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style type='gwt.client.view.desktop.ShellImpl.Style'>
        
        body {

        }
        
        input {
            -moz-border-bottom-colors: none;
            -moz-border-image: none;
            -moz-border-left-colors: none;
            -moz-border-right-colors: none;
            -moz-border-top-colors: none;
            border-color: #999999 #CCCCCC #CCCCCC;
            border-right: 1px solid #CCCCCC;
            border-style: solid;
            border-width: 1px;
            font-family: Arial Unicode MS,Arial,sans-serif;
            font-size: 100%;
            padding: 5px 4px;
        }   
        
        .header {
            margin: 10px 10px 0 0;
        }
        
        .hLb {
            margin: 0 0 10px 0;
            padding: 10px 0 5px 0;
            border-bottom: 1px solid #000;
            font-size: 26px;
            font-weight: bold;
            line-height: 31px;
            vertical-align: baseline;
        }
        
        .actBtn {
            margin: 0 10px 0 0;
        }
        
        .upperRightPanel {
	        position: fixed;
	        top: 10px;
	        right: 10px;
	    }
        
        .upperRightPanel a {
	        color: #222;
	        text-decoration: none;
	    }
	    
	    .upperRightPanel a:hover, .upperRightPanel a:visited {
	        color: #222;
	    }
	    
	    .upperRightPanel a:hover {
	        text-decoration: underline;
	    }

        .container {
            margin: 0 10px 0 0;
        }
        
        .container > div:first-child {
            height: 93%;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PCT">
        <g:west size="9">
            <g:FlowPanel></g:FlowPanel>
        </g:west>
        <g:center>
            <g:DockLayoutPanel unit="PX">
                <g:north size="120">
                    <g:FlowPanel styleName='{style.header}'>
                        <g:Label ui:field="hLb" styleName='{style.hLb}'></g:Label>
                        <g:FlowPanel ui:field="actBar"></g:FlowPanel>
                        <g:HTMLPanel styleName='{style.upperRightPanel}'>
                            <a href="/user?lang=en">en</a>
                            <span>/</span>
                            <a href="/user?lang=th">th</a>
                        </g:HTMLPanel>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:ScrollPanel ui:field="container" styleName='{style.container}'></g:ScrollPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
