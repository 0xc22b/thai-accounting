<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style type='gwt.client.view.desktop.AccGrpViewImpl.Style'>
        .row {
            display: table;
            margin: 10px 0;
        }
        
        .label {
            display: table-cell;
            width: 120px;
        }
        
        .input {
            display: table-cell;
        }
        
        .errMsg {
            display: table-cell;
            color: red;
            padding: 0 0 0 20px;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class='{style.row}'>
            <g:Label ui:field="nameLb" styleName='{style.label}'></g:Label>
            <g:TextBox ui:field="nameTB" styleName='{style.input}' visibleLength='30'></g:TextBox>
            <g:Label ui:field="errNameLb" styleName='{style.errMsg}'></g:Label>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
